{
  "name": "plataform-agent",
  "type": "module",
  "scripts": {
    "build": "esbuild web/app/app.tsx --bundle --minify --outfile=web/static/index.js --format=cjs",
    "build:css": "tailwindcss -i ./web/app/app.css -o ./web/static/index.css --minify",
    "build:watch": "npm run build -- --watch",
    "build:css:watch": "npm run build:css -- --watch",
    "dev": "npm-run-all -p -r build:watch build:css:watch"
  },
  "dependencies": {
    "@radix-ui/react-navigation-menu": "^1.1.4",
    "@radix-ui/react-slot": "^1.0.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "lucide-react": "^0.316.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.21.3",
    "tailwind-merge": "^2.2.1",
    "tailwindcss": "^3.4.1",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "esbuild": "^0.20.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.3.3"
  }
}
